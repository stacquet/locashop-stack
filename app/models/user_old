// le modele user
module.exports = function (orm, db) {
    var User =	db.define('user', {
        id_user : {type : 'number', key: true},
		nom : {type : 'text'},
		email : {type : 'text'}
    });
	
	var ProfilProducteur =	User.extendsTo('profil_producteur', {
        presentation_ferme : {type : 'text'},
		presentation_produits : {type : 'text'},
		presentation_methode : {type : 'text'}
    },
	{
		table : 'user_profil_producteur',
		field : 'id_user'
	});
};